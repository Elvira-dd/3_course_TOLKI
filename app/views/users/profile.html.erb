<% set_meta_tags(
  title: "Профиль замечательного пользователя – #{@user.profile.name}",
  keywords: "Подкасты, Рецензии, Информация"
) %>
<div class="O_Profile">
    <div class="M_ProfileCardOpened">
        <div style="display:flex; gap:16px">
            <%= image_tag @user.profile.avatar, alt: @user.profile.name, class: "ProfileAvatarImage" if @user.profile.avatar.present? %>
            <div class="ProfileTitle">

                <h1> <%= @user.profile.name %> </h1>
                <p> Знаток подкастов <%= @user.profile.level %> уровня </p>

                <div class="C_SectionList">
                    <div class="A_section Small">
                        <h4> 453 подписчика </h4>
                    </div>
                    <div class="A_section Small">
                        <h4> 27 подписок </h4>
                    </div>
                </div>
            </div>
        </div>
        <div class="ProfileFunc">
            <%= button_to destroy_user_session_path, method: :delete, class: "A_Button SecondaryMedium white" do %>
            <h5> Выйти </h5>
            <% end %>
            <div class="Q_Icon setting">
            </div>
        </div>
    </div>
    <div class="C_SectionList">
        <div class="A_section Big">
            <h1> <%= @reviewed_podcasts_count %> </h1>
            <p> подкастов оценено </p>
        </div>
        <div class="A_section Big">
            <h1> <%= @posts_count %> </h1>
            <p> написанных рецензий </p>
        </div>
        <div class="A_section Big">
            <h1> <%= @days_in_app %> </h1>
            <p> дней в приложении </p>
        </div>
    </div>
    <div class="W_ProfilePlaylistBlock">
    </div>
    <h1 style="color: var(--accent_green)">Рецензии </h1>

    <div class="W_ProfilePostsCards">
        <%= link_to new_admin_post_path do %>
        <div class="A_Button Primary">
            <h5> Написать рецензии</h5>
        </div>
        <%end%>
        <% @posts.each do |post| %>
        <%= render partial: "postcard", locals: { post: post } %>
        <% end %>
    </div>
</div>