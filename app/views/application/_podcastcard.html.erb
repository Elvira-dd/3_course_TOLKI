<%= link_to podcast_path(podcast) do %>
<div class="M_PodcastCard">
    <div class="A_Likeble_Cover">
        <%= image_tag podcast.cover, alt: podcast.name, class: "PodcastCoverImage" %>
        <div class="Q_Like withBg"></div>
    </div>
    <h2><%= podcast.name %></h2>
    <div class="C_TagsLine">
        <% if podcast.themes.any? %>
        <% podcast.themes.each do |theme| %>
        <div class="A_Tag">
            <h5><%= theme.name %></h5>
        </div>
        <% end %>
        <% end %>
    </div>
    <p><%= podcast.description %></p>
</div>
<% end %>