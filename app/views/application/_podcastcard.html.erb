<%= link_to podcast_path(podcast) do %>
<div class="M_PodcastCard">
    <div class="A_PodcastCover" style="background-image: url('<%= asset_path(podcast.cover) %>');">
    </div>
    <p class="bold"><%= podcast.name %></p>
    <p class="small two_stroke"><%= podcast.description %></p>
    <div style="display: flex; align-items: center; gap:8px">
        <div class="Q_Icon users">
        </div>
        <p class="small"> 1566 слушателей </p>
    </div>
</div>
<% end %>