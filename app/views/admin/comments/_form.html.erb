<%= form_for([@post, @post.comments.build]) do |form| %>
<%= form.text_area :content, placeholder: "Ваше мнение во всей красе", class: 'classicInput' %>
<%= form.hidden_field :comment_id, value: parent_comment_id if defined? parent_comment_id %>
<%= form.submit "Отправить", class: "formButton" %>
<% end %>