<h1>Ваши плейлисты</h1>

<%= link_to "Создать новый плейлист", new_playlist_path, class: "btn btn-primary" %>

<ul>
    <% @playlists.each do |playlist| %>
    <li>
        <%= link_to playlist.name, playlist_path(playlist) %>
        (<%= link_to "Удалить", playlist_path(playlist), method: :delete, data: { confirm: "Вы уверены?" } %>)
    </li>
    <% end %>
</ul>